@model Rating
@{ ViewData["Title"] = "Edit Comment"; }



<div class="wrap-form">
    <div class="text-center mb-4">
        <h1 class="h3 mb-3 font-weight-normal">Create Comment &amp; Rating</h1>
    </div>
    <form asp-action="EditComment" method="post">
        <div class="form-group">
            <label class="control-label" for="comment">Comment</label>
            <textarea class="form-control" asp-for="Comment" aria-label="With textarea"></textarea>
        </div>
        <div class="form-group">
            <label class="control-label" for="rate">Rating(1-10)</label>
            <input type="number" min="1" max="10" class="form-control rating" asp-for="RateNum" aria-label="With textarea">
        </div>
        <input type="hidden" name="email" value="@Model.Users" />
        <input type="hidden" name="movieId" value="@Model.MovieId" />
        <input type="hidden" name="rateDate" value="@Model.RateDate" />
        <input type="hidden" name="oldComment" value="@Model.Comment"/>
        <div class="form-group align-center">
            <button type="Submit" class="btn btn-primary">Update</button>
        </div>
    </form>
</div>




